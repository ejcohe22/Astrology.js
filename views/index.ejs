<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Style sheets : Main || Personal Overrides -->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Horoscope Webapp Home</title>
</head>
<header class="w3-bar w3-round-small w3-padding-16 w3-purple w3-center w3-xlarge ">
    <div> Check Your Horoscope!</div>
</header>
<body class="home-background" style="background-image: url(/assets/space-background.jpeg);" >
    <form>
        <div>
            <label for="form-1-starsign">
              Choose your starsign
            </label>
            <select class="form-control" id="form-1-starsign">
              <% sunsigns.forEach(sign => { %>
                <option><%= sign %></option>
              <% }) %>
            </select>
        </div>
    </form>
</body>
</html>